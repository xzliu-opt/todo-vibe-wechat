.todo-item-area {
  width: 100%;
  height: 120rpx;
  position: relative;
  background: transparent;
}

.todo-item-view {
  width: 100%;
  height: 100%;
  background-color: var(--color-surface); /* Wait, individual items shouldn't have bg if list has it, but here we likely want list item bg or transparent */
  z-index: 10;
  display: flex;
  align-items: center;
}

/* Adjust for list transparency if needed, but for swipe, view needs background to cover delete btn */
.todo-item-view {
  background-color: transparent; 
}

.todo-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  background-color: transparent; 
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 2rpx solid var(--color-checkbox-border);
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background-color: var(--color-checkbox-checked-bg);
  border-color: var(--color-checkbox-checked-border);
}

.todo-text {
  font-size: 32rpx;
  color: var(--color-text);
  transition: color 0.2s ease;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.todo-text.completed {
  color: var(--color-text-tertiary);
  text-decoration: line-through;
}

.delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 160rpx;
  background-color: var(--color-danger);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  z-index: 1;
  font-size: 30rpx;
}
