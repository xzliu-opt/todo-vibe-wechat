:host {
  display: block;
  width: 100%;
}

.todo-item {
  width: 100%;
  min-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  box-sizing: border-box;
  background-color: var(--color-surface);
  transition: all 0.3s ease-out;
  opacity: 1;
}

.todo-item.deleting {
  height: 0;
  min-height: 0;
  opacity: 0;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

.todo-content {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 16rpx; /* Space between text and icon */
  overflow: hidden;
}

.delete-btn {
  width: 44px; /* Apple HIG min touch target */
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: flex-end; /* Align icon right inside the touch target */
  opacity: 1;
  transition: opacity 0.2s;
  flex-shrink: 0;
}

.delete-hover {
    opacity: 0.5;
}

.delete-icon {
  width: 20px;
  height: 20px;
  /* Icon color is handled in SVG or via filter if needed, but simple SVG replacement is better */
}

/* Cleanup old classes */
.checkbox {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 2rpx solid var(--color-checkbox-border);
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.checkbox.checked {
  background-color: var(--color-checkbox-checked-bg);
  border-color: var(--color-checkbox-checked-border);
}

.text-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
    flex: 1;
}

.todo-text {
  font-size: 32rpx;
  color: var(--color-text);
  transition: color 0.2s ease;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.todo-meta {
    font-size: 22rpx; /* approx 11px */
    color: #8E8E93; /* Apple System Gray */
    margin-top: 4rpx;
    font-weight: 400;
}

.todo-text.completed {
  color: var(--color-text-tertiary);
  text-decoration: line-through;
}
