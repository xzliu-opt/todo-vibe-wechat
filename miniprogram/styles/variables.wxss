/* Light Mode Variables */
page {
  --color-bg: #f5f5f7;
  --color-surface: rgba(255, 255, 255, 0.7);
  --color-text: #1d1d1f;
  --color-text-secondary: #86868b;
  --color-text-tertiary: #aeaeb2;
  --color-text-quaternary: #48484a;
  --color-border: #d2d2d7;
  --color-border-light: #e8e8ed;
  --color-accent: #007aff;
  --color-danger: #ff3b30;
  --color-danger-bg: rgba(255, 59, 48, 0.1);
  --color-input-bg: rgba(255, 255, 255, 0.8);
  --color-input-placeholder: #aeaeb2;
  --color-btn-bg: #1d1d1f;
  --color-btn-text: #ffffff;
  --color-filter-active-bg: #f5f5f7;
  --color-filter-active-text: #1d1d1f;
  --color-item-hover: rgba(245, 245, 247, 0.5);
  --color-divider: rgba(232, 232, 237, 0.6);
  --color-empty-icon-bg: #f5f5f7;
  --color-checkbox-border: #d2d2d7;
  --color-checkbox-checked-bg: #f5f5f7;
  --color-checkbox-checked-border: #f5f5f7;
  --color-check-icon: #1d1d1f;
  --color-toggle-bg: rgba(255, 255, 255, 0.5);
  --color-toggle-border: #e5e7eb;
  --color-toggle-hover: rgba(255, 255, 255, 0.8);
  --color-toggle-icon: #1d1d1f;
  --color-spinner-track: #e8e8ed;
  --color-spinner-head: #1d1d1f;
  --shadow-surface: 0 20px 40px -15px rgba(0, 0, 0, 0.05);
  --shadow-input: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --border-surface: none;
  --font-system: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  --nav-bg: #f5f5f7;
  --nav-text: #000000;
}

/* Dark Mode Variables via class .dark-mode on page/container */
.dark-mode {
  --color-bg: #161618;
  --color-surface: rgba(28, 28, 30, 0.6);
  --color-text: #f5f5f7;
  --color-text-secondary: #86868b;
  --color-text-tertiary: #636366;
  --color-text-quaternary: #48484a;
  --color-border: #3a3a3c;
  --color-border-light: rgba(255, 255, 255, 0.1);
  --color-accent: #0a84ff;
  --color-danger: #ff453a;
  --color-danger-bg: rgba(255, 69, 58, 0.1);
  --color-input-bg: rgba(255, 255, 255, 0.05);
  --color-input-placeholder: #636366;
  --color-btn-bg: #f5f5f7;
  --color-btn-text: #1d1d1f;
  --color-filter-active-bg: rgba(255, 255, 255, 0.1);
  --color-filter-active-text: #f5f5f7;
  --color-item-hover: rgba(255, 255, 255, 0.05);
  --color-divider: rgba(255, 255, 255, 0.05);
  --color-empty-icon-bg: rgba(255, 255, 255, 0.05);
  --color-checkbox-border: #48484a;
  --color-checkbox-checked-bg: #f5f5f7;
  --color-checkbox-checked-border: #f5f5f7;
  --color-check-icon: #1d1d1f;
  --color-toggle-bg: rgba(0, 0, 0, 0.2);
  --color-toggle-border: rgba(255, 255, 255, 0.1);
  --color-toggle-hover: rgba(255, 255, 255, 0.1);
  --color-toggle-icon: #f5f5f7;
  --color-spinner-track: rgba(255, 255, 255, 0.1);
  --color-spinner-head: #ffffff;
  --shadow-surface: none;
  --shadow-input: none;
  --border-surface: 1px solid rgba(255, 255, 255, 0.1);
  --nav-bg: #161618;
  --nav-text: #ffffff;
}
