.container {
  min-height: 100vh;
  padding: 120rpx 40rpx 80rpx;
  background-color: var(--color-bg);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 100rpx; /* 7xl equivalent roughly */
  font-weight: 100;
  display: block;
  letter-spacing: -4rpx;
  color: var(--color-text);
  transition: color 0.5s;
}

.subtitle {
  margin-top: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  color: var(--color-text-secondary);
  display: block;
}

.top-controls {
    position: fixed;
    top: 40rpx;
    right: 40rpx;
    display: flex;
    align-items: center;
    gap: 32rpx;
    z-index: 100;
}

.icon-btn {
    width: 44rpx;
    height: 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.6;
    transition: opacity 0.2s;
}

.icon-btn:active {
    opacity: 1;
}

.icon {
    width: 44rpx;
    height: 44rpx;
    filter: var(--icon-filter);
}

.lang-toggle {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    font-weight: 300;
    color: var(--color-text-tertiary);
}

.lang-toggle .active {
    color: var(--color-text);
    font-weight: 500;
}

.lang-toggle .divider {
    margin: 0 8rpx;
    color: var(--color-divider);
}

.surface {
  width: 100%;
  max-width: 1200rpx;
  border-radius: 64rpx; /* rounded-3xl/4xl */
  padding: 50rpx 40rpx;
  background-color: var(--color-surface);
  box-shadow: var(--shadow-surface);
  border: var(--border-surface);
  backdrop-filter: blur(80px); /* Works on iOS */
  -webkit-backdrop-filter: blur(80px);
  display: flex;
  flex-direction: column;
}

.input-section {
  margin-bottom: 40rpx;
}

.filter-tabs {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 24rpx;
  border-bottom: 1px solid var(--color-border-light);
  margin-bottom: 0;
}

.filters {
    display: flex;
    gap: 8rpx;
}

.filter-chip {
    padding: 10rpx 28rpx;
    border-radius: 999rpx;
    font-size: 26rpx;
    font-weight: 500;
    color: var(--color-text-secondary);
    transition: all 0.2s;
}

.filter-chip.active {
    background-color: var(--color-filter-active-bg);
    color: var(--color-filter-active-text);
}

.counter {
    font-size: 22rpx;
    font-weight: 500;
    color: var(--color-text-tertiary);
    letter-spacing: 0.05em;
}

.counter.invisible {
    visibility: hidden;
}

.todo-list {
    min-height: 480rpx;
    max-height: 50vh; 
}

.empty-state {
    padding: 80rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.empty-title {
    font-size: 30rpx;
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-top: 20rpx;
}

.empty-subtitle {
    margin-top: 8rpx;
    font-size: 26rpx;
    color: var(--color-text-tertiary);
}

.todo-item-wrapper {
    width: 100%;
}

.todo-item-wrapper.border-top {
    border-top: 1px solid var(--color-divider);
}

.list-padding {
    height: 40rpx;
}

.clear-section {
    padding-top: 30rpx;
    border-top: 1px solid var(--color-border-light);
    display: flex;
    justify-content: center;
}

.clear-btn {
    font-size: 26rpx;
    font-weight: 500;
    color: var(--color-text-tertiary);
}

.footer {
    margin-top: auto;
    padding-bottom: 40rpx;
}

.footer text {
    font-size: 20rpx;
    color: var(--color-text-quaternary);
}
