.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    padding-top: env(safe-area-inset-top);
    background-color: var(--color-bg);
}

.calendar-header {
    padding: 32rpx 40rpx 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.month-label {
    font-size: 52rpx;
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: -0.5rpx;
}

.nav-controls {
    display: flex;
    gap: 20rpx;
}

.nav-btn {
    padding: 10rpx;
}

.nav-icon {
    width: 24px;
    height: 24px;
    /* Needs filter for dark mode or specific asset */
}

/* Grid */
.calendar-body {
    padding: 0 32rpx;
}

.week-row {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    margin-bottom: 24rpx;
    gap: 8rpx;
}

.weekday {
    text-align: center;
    font-size: 26rpx;
    color: var(--color-text-tertiary);
    font-weight: 600;
    padding: 8rpx 0;
    min-width: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.days-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 12rpx;
}

.day-cell {
    aspect-ratio: 1;
    min-height: 80rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    position: relative;
    color: var(--color-text);
    padding: 12rpx;
}

.day-cell.empty {
    pointer-events: none;
}

.day-num {
    font-size: 32rpx;
    font-weight: 500;
    line-height: 1;
}

/* Today: Blue Circle */
.day-cell.today {
    background-color: var(--color-accent);
    color: white;
}

/* Selected: Black Circle */
.day-cell.selected {
    background-color: var(--color-text); /* Black in light, White in dark */
    color: var(--color-bg);          /* White in light, Black in dark */
}

/* Intersection logic: if today is selected, black overrides blue usually or use ring?
   Apple: Today is Blue text, Selected is Black Circle.
   Let's stick to User spec: Today Blue BG, Selected Black BG.
*/

.dot {
    width: 6rpx;
    height: 6rpx;
    background-color: var(--color-text-secondary);
    border-radius: 50%;
    position: absolute;
    bottom: 8rpx;
}

.day-cell.today .dot, .day-cell.selected .dot {
    background-color: currentColor; /* Dot matches text color */
}

/* List */
.todo-list {
    flex: 1;
    margin-top: 48rpx;
    padding: 0 0;
}

.list-header {
    padding: 0 40rpx;
    font-size: 24rpx;
    color: var(--color-text-secondary);
    margin-bottom: 24rpx;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1rpx;
}

.empty-state {
    text-align: center;
    color: var(--color-text-tertiary);
    margin-top: 60rpx;
    font-size: 28rpx;
}
